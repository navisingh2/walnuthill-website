---
import '../styles/global.css';
const { title = "Walnut Hill Square Apartments" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/walnut-hill-logo.png" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@500;700&family=Inter:wght@400;500&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>

  <body class="min-h-screen flex flex-col">
   <!-- Header -->
<header class="bg-spruce text-white shadow-header sticky top-0 z-50 font-heading">
  <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
    <a href="/" class="text-lg font-semibold tracking-wide no-underline">Walnut Hill Square Apartments</a>

    <!-- Desktop nav -->
    <ul class="hidden md:flex gap-8 list-none">
      <li><a class="no-underline hover:opacity-85" href="/">Home</a></li>
      <li><a class="no-underline hover:opacity-85" href="/floor-plans">Floor Plans</a></li>
      <li><a class="no-underline hover:opacity-85" href="/video-gallery">Gallery</a></li>
      <li><a class="no-underline hover:opacity-85" href="/contact">Contact Us</a></li>
    </ul>

    <!-- Mobile hamburger -->
    <button
      id="mobile-nav-toggle"
      class="md:hidden inline-flex items-center justify-center rounded-md p-2 hover:bg-white/10"
      type="button"
      aria-label="Open menu"
      aria-controls="mobile-nav"
      aria-expanded="false"
    >
      <svg class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile dropdown menu -->
  <div id="mobile-nav" class="md:hidden hidden border-t border-white/10">
    <ul class="max-w-6xl mx-auto px-4 py-4 flex flex-col gap-4 list-none">
      <li><a class="no-underline hover:opacity-85" href="/">Home</a></li>
      <li><a class="no-underline hover:opacity-85" href="/floor-plans">Floor Plans</a></li>
      <li><a class="no-underline hover:opacity-85" href="/video-gallery">Gallery</a></li>
      <li><a class="no-underline hover:opacity-85" href="/contact">Contact Us</a></li>
    </ul>
  </div>
</header>


    <!-- Page -->
    <main class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-cream">
      <div class="max-w-6xl mx-auto px-4 py-8 text-sm text-center">
        © 2026 Walnut Hill Square Apartments — 4210 Sansom Street, Philadelphia, PA 19104
      </div>
    </footer>

    <script is:inline>

    const toggleBtn = document.getElementById("mobile-nav-toggle");
    const mobileNav = document.getElementById("mobile-nav");

    if (toggleBtn && mobileNav) {
      toggleBtn.addEventListener("click", () => {
        const isOpen = !mobileNav.classList.contains("hidden");
        mobileNav.classList.toggle("hidden");
        toggleBtn.setAttribute("aria-expanded", String(!isOpen));
      });

      // Close after clicking a link (nice on mobile)
      mobileNav.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", () => {
          mobileNav.classList.add("hidden");
          toggleBtn.setAttribute("aria-expanded", "false");
        });
      });
    }

  const prefersReduced = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  if (!prefersReduced) {
    // Start hidden
    document.querySelectorAll('[data-reveal-item]').forEach((el) => {
      el.style.opacity = '0';
      el.style.transform = 'translateY(16px)';
    });

    const io = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (!entry.isIntersecting) return;
        const group = entry.target;
        const items = group.querySelectorAll('[data-reveal-item]');
        items.forEach((el, i) => {
          el.style.transition = 'opacity 700ms ease-out, transform 700ms ease-out';
          el.style.transitionDelay = `${i * 120}ms`;
          el.style.opacity = '1';
          el.style.transform = 'translateY(0)';
        });
        io.unobserve(group); // reveal once
      });
    }, { threshold: 0.15 });

    document.querySelectorAll('[data-reveal]').forEach((g) => io.observe(g));
  }
</script>

  </body>
</html>